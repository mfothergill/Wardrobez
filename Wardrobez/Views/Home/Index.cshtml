@{
    ViewBag.Title = "Home Page";
    @Styles.Render("~/Content/css")
}

<div class="jumbotron">
    <h1>Clarissa's Clothing Botique</h1>
    <p class="lead">"Your fashion is our passion!"</p>
   </div>

<div class="row">
    <div class="col-md-3">
        <h2>@Html.ActionLink("Tops","Index","Tops")</h2>
        <p>
        View a selection of our finest tops for whatever your situation may call for. 
        </p>
        </div>

    <div class="col-md-3">
        <h2>@Html.ActionLink("Bottoms","Index","Bottoms")</h2>
        <p>Check out our new stock from skirts to slacks to jeans.If we dont have it,you don't need it!</p>
        </div>

    <div class="col-md-3">
        <h2>@Html.ActionLink("Shoes","Index","Shoes")</h2>
        <p>Style? Comfort? Preformance? chances are we have what you need here!</p>
         </div>

    <div class="col-md-3">
        <h2>@Html.ActionLink("Accessories","Index","Accessories")</h2>
        <p>
            Clothes may make the man, but accessories complete the plan!Check out what we have-here!
        </p>
    </div>
</div>